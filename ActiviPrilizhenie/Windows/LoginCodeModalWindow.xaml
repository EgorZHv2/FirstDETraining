<Window x:Class="ActiviPrilizhenie.Windows.LoginCodeModalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ActiviPrilizhenie.Windows"
        mc:Ignorable="d"
        Title="LoginCodeModalWindow" WindowStartupLocation="CenterScreen" Height="100" Width="200">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBlock TextAlignment="Center">Ваш код:</TextBlock>
            <TextBox x:Name="CodeBox"></TextBox>
            <Button Click="Button_Click">Ок</Button>
        </StackPanel>
    </Grid>
</Window>
